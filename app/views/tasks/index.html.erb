<h1>All Tasks</h1>

<ul>
<% @tasks.each do |task| %>
<!-- <li><%= task.title %></li> -->
<input type="checkbox" value="<%= task.title %>">
<label><%= link_to task.title, task_path(task) %></label> - <%= link_to "🗑️", tasks_path(@task), data: {turbo_method: :delete, turbo_confirm: "Would you like to delete this task?"}%><br>
<% end %>
</ul>

<div class="ml-3">
  <%= link_to "➕ Add task", tasks_new_path %>
</div>
